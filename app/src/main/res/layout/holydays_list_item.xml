<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/bicentenary_layout_backgroud"
    android:padding="3dp"
    >


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="5"
        android:gravity="center_vertical"
        android:layout_marginLeft="4dp"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/text_feast_name"
        android:fontFamily="serif"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_width="match_parent"
        android:textSize="16sp"
        android:textColor="#FFFAA528"

        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/text_feast_month_date"
        android:layout_below="@id/text_feast_name"
        android:fontFamily="serif"
        android:textColor="#FFFAA528"
        android:textSize="21sp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/layout_count"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:gravity="center">
        <TextView
            android:id="@+id/imgcount"
            android:textSize="38sp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            ></TextView>

        <TextView
            android:id="@+id/imgdaysleft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgcount"
            android:layout_centerHorizontal="true"
            android:textSize="15sp"
            android:includeFontPadding="false"
            android:text="days left"
            ></TextView>
    </RelativeLayout>




</LinearLayout>